using static System.Windows.Forms.VisualStyles.VisualStyleElement.ListView;
using static System.Windows.Forms.VisualStyles.VisualStyleElement.StartPanel;
using System.IO;

namespace Verschl√ºsseligundsoundKeanuischliebi
{
    public partial class Form1 : Form
    {
        string path = @"C:\\Test\\Test.txt";
        List<string> Profile = new();
        List<string> Email = new();
        List<string> UserName = new();
        List<string> Password = new();
        string masterpassword = "";
        string securekey = "";
        string key = "sudifudi";
        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            string[] lines = File.ReadAllLines(path);
            for (int i = 0; i < 1; i++)
            {
                string[] fields = lines[i].Split(',');
                if (fields.Length >= 2)
                {
                    masterpassword = fields[0];
                    securekey = fields[1];
                }
            }
            for (int i = 1; i < lines.Length; i++)
            {
                string[] fields = lines[i].Split(',');

                if (fields.Length >= 4)
                {
                    Profile.Add(fields[0]);
                    UserName.Add(fields[1]);
                    Email.Add(fields[2]);
                    Password.Add(fields[3]);
                }
            }

        }
    }
}
